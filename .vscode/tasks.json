{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "clang++ compiler build",
      "type": "shell",
      "command": "clang++",
      "args": [
        "-v",
        "-std=c++17",
        "--include-directory=D:\\libraries\\glfw\\include\\",
        "--include-directory=D:\\libraries\\glm\\",
        "--include-directory=D:\\vulkan\\1.2.148.1\\Include\\",
        "--include-directory=D:\\vulkan\\1.2.148.1\\Lib\\",
        "--library-directory=D:\\vulkan\\1.2.148.1\\Include\\",
        "--library-directory=D:\\vulkan\\1.2.148.1\\Lib\\",
        "--library-directory=D:\\libraries\\glm\\",
        "--library-directory=D:\\libraries\\glfw\\lib-mingw-w64\\",
        "--library-directory=D:\\libraries\\glfw\\lib-vc2019\\",
        "-g",
        "${file}",
        "-o",
        "${workspaceFolder}\\build\\${fileBasenameNoExtension}.exe"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Windows compiler build",
      "type": "shell",
      "command": "cl.exe",
      "args": [
        "/Zi",
        "/EHsc",
        "/Fe:",
        "${workspaceFolder}\\build\\${fileBasenameNoExtension}.exe",
        "${file}"
      ],
      "problemMatcher": ["$msCompile"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
